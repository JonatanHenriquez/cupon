{% extends 'base.html.twig' %}

{% block title %}
    Ofertas Recientes en {{ ciudad.nombre }}
{% endblock %}

{% block body %}
    <div id = "recientes">
        <div>
            <div class = "row">
                <div class = "col s12 m12 l9">
                    <h3 class = "">Ofertas Recientes en <strong> {{ ciudad.nombre }}:</strong></h3>
                    {% for oferta in ofertas %}
                        {% include 'AppBundle:default/include:minioferta.html.twig' %}
                        <div class = "divider"></div>
                    {% else %}
                        <p>Esta ciudad no tiene ofertas publicadas</p>
                    {% endfor %}
                </div>
                <div class = "col s12 m12 l3">
                    <div class = "section center">
                        <h4>Ofertas en otras ciudades</h4>
                        <ul>
                            {% for lugar in cercanas %}
                                <li>
                                    <a href = "{{ path('recientes', { 'ciudad': lugar.ficha }) }}"> {{ lugar.nombre }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                    {% if not is_granted('ROLE_USUARIO') %}
                        <div class = "section" id = "login">
                            {{ render(controller('AppBundle:Security:cajaLogin' ) ) }}
                        </div>
                    {% endif %}


                </div>
            </div>
        </div>


    </div>
{% endblock %}

{% block javascript %}

{% endblock %}

